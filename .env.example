# =========================
# 필수 (Gmail 기준 예시)
# =========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com             # Gmail 주소
SMTP_PASS=app_password_here                # Gmail 앱 비밀번호(2단계 인증 후 발급)

MAIL_FROM=your_email@gmail.com
MAIL_TO=your_email@gmail.com,team@example.com   # 쉼표(,)로 여러 명

# =========================
# 선택 (크롤링 동작 설정)
# =========================
PAGES=3                                    # 목록 페이지 몇 페이지까지 훑을지
TIMEOUT=10                                  # 요청 타임아웃(초)
RETRY=1                                     # 실패 시 재시도 횟수
SEED_MODE=false                             # true면 현 시점 글들을 '이미 본 것'으로만 기록(메일 미발송)
USER_AGENT=JBNU-Notice-Mailer/1.0 (contact: your_email@gmail.com)
JBNU_TLS_COMPAT=1                           # www.jbnu.ac.kr TLS 호환 모드(권장: 1)

